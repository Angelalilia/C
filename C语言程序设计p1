//给出变量和加减运算
#include<stdio.h>
int main()
{
	int num1 = 0;
	int num2 = 0;
	int sum = 0;
	printf("请输入俩个数值");
	scanf("%d%d", &num1, &num2);//输入数值
    sum = num1 + num2;
	printf("sum = %d\n",sum);
	system("pause");
	return 0;
}
