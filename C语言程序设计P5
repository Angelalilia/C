#define _CRT_SECURE_NO_WARNINGS 
//if条件语句
#include<stdio.h>
#include<stdlib.h>
int main()
{
	int age = 25;
	if(age<18)
	printf("未成年");
	if(age>=18 && age<40)//&&并且符号
		printf("壮年");
	else
		printf("老年");
    system("pause");
    return 0;
}

//if或else控制多条语句需要用{}

#include<stdio.h>
#include<stdlib.h>
int main()
{
	int age = 5;
	if(age<18)
	{
	printf("未成年\n");
	printf("不能谈恋爱\n");
	}
	else if(age>=18 && age<40)//&&并且符号
		printf("壮年");
	else
		printf("老年");
    system("pause");
    return 0;
}

//悬空else
//出现多个if，else与最近一个if组成循环

#include<stdio.h>
#include<stdlib.h>
int main()
{
	int a = 5;
	int b = 6;
	if(a == 3)	
	  if(b == 6)
		printf("hehe\n");
	  else
		printf("haha\n");
    system("pause");
    return 0;
}

//=是赋值，==是判断相等

#include<stdio.h>
#include<stdlib.h>
int main()
{
	int a = 5;
	if(a = 8)
	printf("呵呵\n");	
	else
		printf("哈哈\n");
    system("pause");
    return 0;
}

//打印奇数
//第一种

#include<stdio.h>
#include<stdlib.h>
int main()
{
	int i = 0;
	while(i <= 100)
	{
	
		
		if(i %2 ==1)//或者if(i%2 != 0)
			printf("%d ",i);
		i++;
		
	}
system("pause");
return 0;
}


//第二种

#include<stdio.h>
#include<stdlib.h>
int main()
{
	int i = 1;
	while(i<=100)
    {
		printf("%d ",i);
		i+=2;//+=先加2后相等
	}
system("pause");
return 0;
}



//3switch语句
//eg:打印星期
//swtich打印不同的

#include<stdio.h>
#include<stdlib.h>
int main()
{
	int day = 0;//给day个初始值
	scanf("%d", &day);//把值赋给具体变量时，需要知道该变量地址
	switch(day)//switch只能是整型int && 常量，其他类型不行
	{
	case 1://case情况1
	    printf("星期1\n");
		break;//跳出循环
	case 2:
	    printf("星期2\n");
		break;
	case 3:
	    printf("星期3\n");
		break;
	case 4:
	    printf("星期4\n");
		break;
	case 5:
	    printf("星期5\n");
		break;
	case 6:
	    printf("星期6\n");
		break;
	case 7:
	    printf("星期天\n");
	}
system("pause");
return 0;
}



//shift+delete快速删除一行全部内容
//swtich打印连续一样的

#include<stdio.h>
#include<stdlib.h>
int main()
{
	int day = 0;
	scanf("%d", &day);
	switch(day)
	{
	case 1:
	case 2:
	case 3:
	case 4:
	case 5:
	    printf("工作日\n");
		break;
	case 6:
	case 7:
	    printf("休息日\n");
        break;
	default://当输入内容无法识别时
		printf("输入错误\n");
			break;
	}
system("pause");
return 0;
}

//swtich小练习
#include<stdio.h>
#include<stdlib.h>
int main()
{
	int n = 1;//2 3
	int m = 2;//3 4 5
	switch(n)
	{
	case 1:
		m++;//m+1
	case 2:
		n++;
	case 3:
		switch(n)//swtich允许嵌套使用
	    {
	     case 1:
		 n++;
	     case 2:
		 m++;
		 n++;
		 break;
		}
	case 4:
		m++;
		break;
	default:
		break;
	}
		printf("m = %d,n = %d\n",m, n);
system("pause");
return 0;
}
